<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_clinic"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_clinic"
        android:id="@+id/relycompany">

        <RelativeLayout
            android:id="@+id/relyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/Companyreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Company Register"
                android:textColor="#ffff"
                android:textSize="25dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relycompanyreg"
            android:layout_below="@+id/relyname"
            android:layout_centerHorizontal="true"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namecompany"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Company Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailcompany"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Email"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <TextView
                        android:id="@+id/datecompany"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center|center_vertical"
                        android:hint="Establish date"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF"
                        android:textSize="20dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companynumber"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <EditText
                        android:id="@+id/comAddress"
                        android:layout_width="300dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Descriptio"
                        android:layout_width="300dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Description About Company"
                        android:inputType="textImeMultiLine"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pass_comp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmpas_comp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Confirm Password"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />



                    <Button
                        android:id="@+id/regcompany"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/round_bottun"
                        android:focusableInTouchMode="false"
                        android:text="Sign in"
                        android:textColor="#FFFFFF"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:layout_marginBottom="50dp"
                        android:onClick="registcompany"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prograssbar1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginBottom="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>