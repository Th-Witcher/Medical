<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:id="@+id/linear1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#345DA5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/backdoc"
                android:elevation="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/circleimage_comp"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:elevation="4dp"
            android:layout_marginTop="-29dp"
            android:layout_gravity="center"
            android:background="@drawable/namrprofile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FBFBFB"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:id="@+id/comname"/>

        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:layout_marginTop="-30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Address "
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comcity"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"/>


                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:background="#3F51B5"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Phone "
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comnum"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"/>


                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:background="#3F51B5"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Mail "
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commail"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"/>



                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:background="#3F51B5"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Establish Date  "
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comdate"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"/>


                <View
                    android:layout_width="300dp"
                    android:layout_height="3dp"
                    android:background="#3F51B5"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Description  "
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cominfo"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"/>











            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/namrprofile"
        android:src="@drawable/ic_logout"
        android:id="@+id/logout_comp"
        />

</RelativeLayout>