<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regist.PharmFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_clinic"
        android:id="@+id/relypharmcy"
        >

        <RelativeLayout
            android:id="@+id/relypharmcyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/pharmcyreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Pharmacy Register"
                android:textColor="#ffff"
                android:textSize="36sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relypharmcyreg"
            android:layout_below="@+id/relypharmcyname"
            android:layout_centerHorizontal="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstnamepharmcy"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastnamepharmcy"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailpharmacy"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Email"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pharmacynumber"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namepharmcy"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Pharmacy Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />



                    <Spinner
                        android:id="@+id/pharmacycity"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:paddingLeft="15dp"
                        android:popupBackground="#4b6cb7"
                        android:textColorHint="#FFFFFF" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/doctorname"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Doctor Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passpharmacy"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmpharmacy"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/inputbox"
                        android:gravity="center"
                        android:hint="Confirm Password"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#95FFFFFF" />

                    <Button
                        android:id="@+id/regpharmacy"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_bottun"
                        android:focusableInTouchMode="false"
                        android:text="Sign in"
                        android:textColor="#FFFFFF"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textColorLink="#FFFFFF"
                        android:onClick="registpharmacy"
                        android:layout_marginBottom="45dp"/>



                </LinearLayout>

            </ScrollView>
        </RelativeLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prograssbar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginBottom="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>